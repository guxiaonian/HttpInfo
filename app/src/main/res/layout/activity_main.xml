<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55cccccc"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/main_activity_et_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="top"
        android:hint="@string/main_input"
        android:inputType="textUri"
        android:minHeight="170dp"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:textColor="#ff333333"
        android:textColorHint="#ffb0b0b0"
        android:textCursorDrawable="@null"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/main_activity_start_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/main_language"
        app:layout_constraintBottom_toTopOf="@+id/main_activity_start_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_et_input" />

    <Button
        android:id="@+id/main_activity_start_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/main_activity_start_btn"
        android:text="@string/main_start"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>